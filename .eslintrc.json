{
    "extends": [
        "@aiandralves/eslint-config/node",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "jest",
        "eslint-plugin-jest"
    ],
    "overrides": [
        {
            "files": [
                "*.spec.ts"
            ],
            "rules": {
                "no-undef": "off",
                "no-unused-vars": "off"
            }
        }
    ],
    "rules": {
        "dot-notation": "off",
        "space-before-function-paren": [
            "error",
            "always"
        ]
    }
}